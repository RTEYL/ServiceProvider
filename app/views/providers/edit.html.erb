<h1>Edit Account</h1>
<br><br>
<%= form_for @user do |f| %>

<%= f.label :first_name %>
<%= f.text_field :first_name %>
<br><br>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br><br>
<%= f.label :email %>
<%= f.email_field :email %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password %>
<br><br>
<%= f.submit 'Update Account'%>
<%= link_to 'Delete',
        user_path(id: @user.id, authenticity_token: form_authenticity_token),
        class: 'data-type-button btn',
        method: :delete %>
<% end %>