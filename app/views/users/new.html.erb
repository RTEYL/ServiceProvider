<h1>Sign Up!</h1>
<br>
<%= link_to 'With Github', '/auth/github' %> OR
<br><br>
<%= form_for @user, url: '/signup' do |f| %>

<%= f.label :first_name %>
<%= f.text_field :first_name %>
<br><br>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br><br>
<%= f.label :email %>
<%= f.email_field :email %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password %>
<br><br>
<%= f.label "Sign Up as a Provider to list your own service."%>
<%= f.check_box :service_provider%>
<br><br>
<%= f.submit %>

<% end %>