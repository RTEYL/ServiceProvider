<h1>Add a service by filling out the form below</h1>
<br>

<%= form_for @service, url: user_services_path do |f| %>
  <%= render partial: 'shared/errors_partial', locals:{f: f} %>
  <%= f.hidden_field :user_id, value: @user.id%>
  <%= f.label :service_type, "What type of service do you want to offer?" %>
  <br>
  <%= f.text_field :service_type %>
  <br>
  <%= f.label :description, "What does your service do?" %>
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.submit %>

<% end %>