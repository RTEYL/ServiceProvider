<h1>Edit form</h1>

<%= form_for @service, url: user_service_path do |f| %>
  <%= render partial: 'shared/errors_partial', locals:{f: f} %>
  <%= f.hidden_field :user_id, value: @user.id%>
  <%= f.label :service_type, "Change service type" %>
  <br>
  <%= f.text_field :service_type %>
  <br>
  <%= f.label :description, "Change description" %>
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.submit 'Delete Service'%>
  <%= f.submit %>

<% end %>